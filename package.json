    "eslint": "^8.23.1",
    "mocha": "^10.2.0",
    "npm-dts": "^1.3.12",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "ts-mocha": "^10.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.2.2"
